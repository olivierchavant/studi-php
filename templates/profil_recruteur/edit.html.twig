{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="container">
    <h1> Profil recruteur  </h1>
    <ul>
        <li> Nom  : {{ recruteur.Entreprise }} </li>
        <li> Adresse  : {{ recruteur.Adresse }} </li>
         <li> Fonction  : {{ recruteur.Fonction }} </li>
          <li> Téléphone  : {{ recruteur.tel }} </li>
        
      
    </ul>
    {% if is_granted('ROLE_RECRUTEUR') %}
           <a href="{{ path('app_profil_recruteur_registration', { 'id': recruteur.id }) }}" class="btn btn-lg btn-success"> {{ "Modifier" | trans }} </a>
    {% endif %}
    <button class="btn btn-lg btn-success"  onclick="history.go(-1);"> retour  </button>
</div>
{% endblock %}
