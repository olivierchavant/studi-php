{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container"> 
    <h1>Votre profil ! </h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.nom) }}
        {{ form_row(registrationForm.prenom) }}
        {{ form_row(registrationForm.rue) }}
        {{ form_row(registrationForm.ville) }}
        {{ form_row(registrationForm.codePostal) }}
        {{ form_row(registrationForm.Tel) }}
        {{ form_row(registrationForm.age) }}
        {{ form_row(registrationForm.cv) }}
        {{ form_row(registrationForm.description) }}

        <button type="submit" class="btn btn-lg btn-success">Enregister</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
