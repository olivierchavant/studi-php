{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="container">
    <h1> Liste des utilisateurs </h1>
    <div class="">  
        <table class="table">
            <thead>
                <tr>
                <th scope="col">email</th>
                <th scope="col">profil</th>
                <th scope="col">password</th>
                <th scope="col">Handle</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                
                <td>{{ user.email }}</td>
                <td>{{ user.profil }}</td>
                <td>{{ user.password }}</td>
                {% for role in user.roles %}
						<td>{{ role }}</td>
				{% endfor %}  
                <td><a href="{{ path('app_user_remove', { 'id': user.id }) }}" class="btn btn-danger btn-sm">
                         {{ "supprimer" | trans }}
                </a>
                </td>
                <td><a href="{{ path('app_user', { 'id': user.id }) }}" class="btn btn-success btn-sm">
                         {{ "Editer" | trans }}
                </a>
                </td>
                </tr>
            </tbody>
            {% endfor %}
        </table>
    </div>        
</div>
{% endblock %}
